{
  "license": "MIT",
  "private": true,
  "scripts": {
    "lint": "eslint --format=pretty . --ext '.svelte,.js'; stylelint .; prettier --check .",
    "lint:fix": "eslint --format=pretty --fix . --ext '.svelte,.js'; stylelint --fix .; prettier --write .",
    "docs:export": "yarn workspace attractions-docs export",
    "docs:build": "yarn workspace attractions-docs build",
    "docs:dev": "yarn workspace attractions-docs dev",
    "build": "yarn workspace attractions build",
    "postinstall": "is-ci || husky install",
    "prepublishOnly": "pinst --disable",
    "postpublish": "pinst --enable"
  },
  "workspaces": [
    "attractions",
    "docs"
  ],
  "devDependencies": {
    "@babel/core": "^7.10.5",
    "@babel/plugin-syntax-dynamic-import": "^7.0.0",
    "@babel/plugin-transform-runtime": "^7.10.5",
    "@babel/preset-env": "^7.12.11",
    "@babel/runtime": "^7.10.5",
    "@sveltejs/eslint-config": "sveltejs/eslint-config",
    "@typescript-eslint/eslint-plugin": "^4.12.0",
    "@typescript-eslint/parser": "^4.12.0",
    "babel-eslint": "^10.1.0",
    "eslint": "^7.17.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-formatter-pretty": "^4.0.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-svelte3": "^3.0.0",
    "husky": "^5.0.4",
    "is-ci": "^2.0.0",
    "lint-staged": "^10.2.11",
    "pinst": "^2.1.1",
    "prettier": "2.2.1",
    "prettier-plugin-svelte": "^2.0.3",
    "stylelint": "^13.6.1",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-sass-guidelines": "^7.0.0",
    "svelte": "^3.31.2",
    "typescript": "^4.1.3"
  },
  "lint-staged": {
    "[^.]*.js": [
      "eslint --format=pretty",
      "eslint --max-warnings 0 --fix",
      "prettier --write"
    ],
    "*.svelte": [
      "eslint --format=pretty",
      "eslint --max-warnings 0 --fix",
      "prettier --write"
    ],
    "*.scss": [
      "stylelint --max-warnings 0 --fix",
      "prettier --write"
    ]
  }
}
